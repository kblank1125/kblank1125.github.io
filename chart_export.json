{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "description": "Transform using the timeParse command",

    "title": {
    "text": "Total UK exports",
    "subtitle": "Source: ONS",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },

    "width":300,
    "height":280,


    "data": {
      "url": "https://raw.githubusercontent.com/kblank1125/kblank1125.github.io/main/data_MM23-IKBH.json",
      "format": {
        "type":"json",
        "property": "quarters"
      }},
  
    "mark":{
      "type": "line",
      "color":"blueviolet",
      "strokeWidth":2,
      "opacity":1
    },

    "transform": [
      {"calculate":"substring(datum.quarter,1)*3-1", "as": "quarter_n"},
      {"calculate":"join([datum.year, datum.quarter_n],['-'])", "as": "date2"},
      {"calculate":"timeParse(datum.date2, '%Y-%m')", "as": "date3"},

      {"filter": "datum.year>minYear"},
       {"filter": "datum.year<maxYear"}

    ],
"params": [    
      {"name":"minYear", "value":1990,
         "bind":{
           "input": "range",
           "min": 1990, 
           "max": 2021, 
           "step": 1,
           "name": "Start year:"}
      },

      {"name":"maxYear", "value":2021,
         "bind":{
           "input": "range",
           "min": 1990, 
           "max": 2021, 
           "step": 1,
           "name": "End year:"}
      }
    ],


    "encoding": {
      
      "x": {
        "field": "date3", 
        "type": "temporal",
        "title":null
        },
  
      "y": {
        "field": "value", 
        "type": "quantitative",
        "title":null
        },

     "tooltip": [
      {"field": "date3", "title": "Date", "type": "temporal", "timeUnit":"year"},
      {"field": "value", "title": "GDP (Â£)", "type": "quantitative"}
    ]
    
  }
}